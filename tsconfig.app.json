{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/api/**/*",
    "src/utils/**/*",
    "src/icons/*",
    "src/icons/**/*.vue",
    "SOAPInBrowser",
    "eMondrianUtils/SOAPInBrowser/src/**/*",
    "node_modules/@vue/runtime-core/dist/runtime-core.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["es2019", "DOM"]
  }
}
